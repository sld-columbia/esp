
mainmenu_option next_comment
comment 'Processor            '
bool 'Enable LEON3 SPARC V8 Processor' CONFIG_LEON3
if [ "$CONFIG_LEON3" = "y" ]; then
  choice 'Force values from example configuration (see help)' \
    "Minimal-configuration	CONFIG_LEON3_MIN \
     General-purpose-cfg	CONFIG_LEON3_GP \
     High-Performance-cfg	CONFIG_LEON3_HP \
     Custom-configuration	CONFIG_LEON3_CUSTOM" Custom-configuration
